{
    "name": "Meditation Chrome Extension",
    "description": "Meditation Reminder",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "notifications",
        "tabs",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "match_about_blank": true,
            "js": [
                "content.js"
            ]
        }
    ]
}